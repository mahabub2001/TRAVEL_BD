<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <Button
        android:id="@+id/button_myaccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="My Profile"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="@+id/textView_profileID"
        app:layout_constraintTop_toBottomOf="@+id/textView_profileID" />

    <Button
        android:id="@+id/button_dark_mode_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Dark Mode"
        android:textAlignment="viewStart"
        app:layout_constraintTop_toBottomOf="@+id/textView_accessibility"
        tools:layout_editor_absoluteX="-16dp" />

    <Button
        android:id="@+id/button_language_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="About Us"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="@+id/button_dark_mode_ID"
        app:layout_constraintTop_toBottomOf="@+id/button_dark_mode_ID" />

    <TextView
        android:id="@+id/settingID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Settings"
        android:textColor="@color/white"
        android:textAlignment="viewStart"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_profileID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="Profile Settings"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingID" />

    <Button
        android:id="@+id/button_cu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Contact Us"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="@+id/button_report_problemID"
        app:layout_constraintTop_toBottomOf="@+id/button_report_problemID" />

    <Button
        android:id="@+id/button_signout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Sign Out"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="@+id/button_cu"
        app:layout_constraintTop_toBottomOf="@+id/button_cu" />

    <Button
        android:id="@+id/DevelopersID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="See Developers"
        android:textAlignment="viewStart"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintTop_toBottomOf="@+id/button_signout_id"
        />

    <Button
        android:id="@+id/button_report_problemID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Report a Problem"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="@+id/textView_support"

        app:layout_constraintTop_toBottomOf="@+id/textView_support" />

    <Button
        android:id="@+id/button_location_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Ticket Service"
        android:textAlignment="viewStart"
        app:layout_constraintTop_toBottomOf="@+id/button_language_id"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView_accessibility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Accessibility"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_myaccount" />

    <TextView
        android:id="@+id/textView_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="Support And About"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_location_id" />

</androidx.constraintlayout.widget.ConstraintLayout>